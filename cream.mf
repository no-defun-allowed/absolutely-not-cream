u#:=12/8pt#;
define_pixels(u);

def forward_flick(expr p) =
  draw p..(p + (1u, 0.5u));
enddef;
def backward_flick(expr p) =
  draw p..(p - (1u, 0.5u));
enddef;

def c_ish_shape(expr a, b) =
  z4=(4u,5u);
  z5=(0, 3u);
  z6=(1u, 0);
  z7=(4u,2u);
  draw z4..z5..z6..z7{(a,b)};
enddef;

def c_shape =
  c_ish_shape(0.7, 0.7);
enddef;

def backward_c_shape =
  z4=(0,  3u);
  z5=(3.5u, 5u);
  z6=(2.5u, 1u);
  z7=(0, 0);
  draw z4{up}..z5..z6..z7{left};
enddef;

def right_line(expr h, top) =
  z1=(4u,top);
  z2=(4u,top-h);
  draw z1..z2; forward_flick(z2);
enddef;

def left_line(expr h, top) =
  z1=(0,top);
  z2=(0,top-h);
  draw z1..z2; backward_flick(z1);
enddef;

beginchar(97, 4u#, 5u#, 0u#); "Lowercase a";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
  c_shape;
  right_line(5u, 5u);
  labels(range 1 thru 7);
endchar;

beginchar(98, 4u#, 8u#, 0u#); "Lowercase b";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
  backward_c_shape;
  left_line(8u, 8u);
  labels(range 4 thru 7);
endchar;

beginchar(99, 4u#, 5u#, 0u#); "Lowercase c";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
  c_shape;
  labels(range 4 thru 7);
endchar;

beginchar(100, 4u#, 8u#, 0u#); "Lowercase d";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
