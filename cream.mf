  labels(range 1 thru 7);
endchar;

beginchar(101, 4u#, 5u#, 0u#); "Lowercase e";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
  c_ish_shape(0, 1);
  z3=(0, 1u);
  draw z3..z4;
  labels(range 1 thru 7);
endchar;

beginchar(112, 4u#, 5u#, 3u#); "Lowercase p";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
  backward_c_shape;
  left_line(8u, 5u);
  labels(range 1 thru 7);
endchar;

beginchar(112, 4u#, 5u#, 3u#); "Lowercase q";  
  pickup pencircle xscaled 50 yscaled 25 rotated 30;
